---
const { title = "Page Title", image = "/public/images/page-hero.jpg" } = Astro.props;
---

<section class="page-hero" style={`background-image: url('${image}')`}>
  <div class="overlay">
    <h1>{title}</h1>
  </div>
</section>

<style>
.page-hero {
  width: 100%;
  height: 40vh; /* adjust between 30â€“40vh */
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 70px; /* pushes it below navbar */
  position: relative;
}

.page-hero .overlay {
  background: rgba(0, 0, 0, 0.4); /* dark overlay so text is visible */
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-hero h1 {
  color: white;
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 800;
  text-align: center;
}
</style>
